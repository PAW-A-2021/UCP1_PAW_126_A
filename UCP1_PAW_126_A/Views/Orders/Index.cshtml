@model IEnumerable<UCP1_PAW_126_A.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th>
                @Html.DisplayName("Date")
            </th>
            <th>
                @Html.DisplayName("IdMenuNavigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMenuNavigation.IdMenu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrder"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdOrder"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrder"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
           
        </tr>
}
    </tbody>
</table>
